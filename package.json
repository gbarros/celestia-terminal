{
  "name": "blobr",
  "version": "1.0.0",
  "description": "A terminal-based rollup activity monitor for Celestia",
  "main": "dist/cli.js",
  "bin": {
    "blobr": "./dist/cli.js"
  },
  "scripts": {
    "build:tsc": "tsc",
    "build": "npm run clean && npm run build:tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules package-lock.json",
    "prepublishOnly": "npm run build",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "celestia",
    "rollup",
    "blob",
    "monitor",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gbarros/celestia-terminal.git"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "ora": "^5.4.1",
    "table": "^6.8.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
